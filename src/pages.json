{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
      //"^RGQJ(.*)":"@/components/RGQJ$1.vue"
    }
  },
  "pages": [
